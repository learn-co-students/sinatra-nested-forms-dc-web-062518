<h1>Pirate</h1>
  <div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %></h4><br>
    <h5>Height: <%= @pirate.height %></h5>
  </div><br>

<h2>Ships</h2>
<div class="ship">
<% @ships.each do |ship| %>
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
  </div><br>
